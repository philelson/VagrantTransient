  "description": "Vagrant Transient - application to power down all your Vagrant Instances",
  "homepage": "https://pegasus-commerce.com",
  "license": "MIT",
  "authors":
  [
    {
      "name": "Phil Elson",
      "email": "phil@pegasus-commerce.com"
    }
  ],
  "require":
  {
    "php": ">=5.3",
    "symfony/console": "^2.7@dev",
    "monolog/monolog":"~1.13.1"
